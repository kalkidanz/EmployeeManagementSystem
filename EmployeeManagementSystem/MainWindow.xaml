<Window x:Class="EmployeeManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagementSystem"
        mc:Ignorable="d"
        Title="" Height="450" Width="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="373*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Employee Management System" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Left" 
                   Margin="199,50,0,0" Grid.Column="1" />

        

        <TextBlock Text="Username:" 
                   Margin="50,130,0,0" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Left" Grid.ColumnSpan="2" />
        <TextBox Name="txtUsername" 
                 Width="250" Height="30" 
                 Margin="96,130,0,0" 
                 VerticalAlignment="Top" 
                 HorizontalAlignment="Left" Grid.Column="1" />

       
        <TextBlock Text="Password:" 
                   Margin="50,180,0,0" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Left" Grid.ColumnSpan="2" />
        <PasswordBox Name="txtPassword" 
                     Width="250" Height="30" 
                     Margin="96,180,0,0" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Left" Grid.Column="1" />

        <Button Content="Login" 
                Width="120" Height="35" 
                Margin="111,250,0,0" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Left" 
                Click="btnLogin_Click" Grid.Column="1" />

        <TextBlock Name="txtMessage" 
                   Foreground="Red" 
                   FontSize="14" 
                   HorizontalAlignment="Left" 
                   Margin="346,310,0,0" Grid.Column="1" />

    </Grid>
</Window>
