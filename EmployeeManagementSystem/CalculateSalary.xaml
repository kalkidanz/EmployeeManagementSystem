<UserControl x:Class="EmployeeManagementSystem.CalculateSalary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmployeeManagementSystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Calculate Salary" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Employee ID" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmployeeID" Width="200"/>

            <Button x:Name="btnCalculate" Content="Calculate Salary" Width="200" Margin="0,10,0,0" Click="btnCalculate_Click"/>

            <TextBlock x:Name="txtResult" FontSize="16" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
